import logging
import os

import telebot
from dotenv import load_dotenv

load_dotenv()

TOKEN = os.getenv('TOKEN')
bot = telebot.TeleBot(TOKEN)


@bot.message_handler(commands=['start'])
def send_welcome(message):
    """–ö–Ω–æ–ø–∫–∏ –≤–Ω—É—Ç—Ä–∏ –±–æ—Ç–∞ –∏ –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ. """

    keyboard = telebot.types.ReplyKeyboardMarkup(row_width=3)
    buttons = [
        telebot.types.KeyboardButton(text='–†–µ–∑—é–º–µ'),

    ]
    keyboard.add(*buttons)
    logging.info('–ë–æ—Ç –∑–∞–ø—É—â–µ–Ω')
    bot.reply_to(
        message,
        '–ü—Ä–∏–≤–µ—Ç, —è –±–æ—Ç —Ä–µ–∑—é–º–µ!üôã‚Äç‚ôÇÔ∏è \n'
        '\n'
        'üü° –Ø —Å–æ–∑–¥–∞–ª —ç—Ç–æ–≥–æ –±–æ—Ç–∞ —á—Ç–æ–±—ã –≤—ã –º–æ–≥–ª–∏ –ø–æ–∑–Ω–∞–∫–æ–º–∏—Ç—å—Å—è —Å–æ –º–Ω–æ–π –ø–æ–±–ª–∏–∂–µ'
        'üë®‚Äçüíª\n'
        '\n'
        'üü¢ –ë–æ—Ç —É–º–µ–µ—Ç —Ä–∞—Å–ø–æ–∑–Ω–∞–≤–∞—Ç—å —Ç–µ–∫—Å—Ç–æ–≤—ã–µ –∫–æ–º–∞–Ω–¥—ã –∏ –Ω–∞–∂–∞—Ç–∏—è –∫–Ω–æ–ø–æ–∫, '
        '–∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –Ω–∏–∂–Ω–µ–≥–æ –∏ –≤–µ—Ä—Ö–Ω–µ–≥–æ —Ä–µ–≥–∏—Å—Ç—Ä–∞ —Å–∏–º–≤–æ–ª–æ–≤ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è.\n'
        '\n'
        'üü£ –í—ã –º–æ–∂–µ—Ç–µ —É–∑–Ω–∞—Ç—å –æ –º–æ–∏—Ö —É–≤–ª–µ—á–µ–Ω–∏—è—Ö, –ø–æ—Å–ª—É—à–∞—Ç—å –æ —Ç–æ–º –≥–¥–µ —è —É—á–∏–ª—Å—è, '
        '–æ —Ç–æ–º –∫–∞–∫ —è –Ω–∞—á–∞–ª –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞—Ç—å, –ø–æ—Å–º–æ—Ç—Ä–µ—Ç—å –º–æ–π github, '
        '–∏ –ø–æ–ª—É—á–∏—Ç—å –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏–µ –æ –º–æ–µ–º –æ–ø—ã—Ç–µ ü§ì\n'
        '\n'
        'üîµ –ï—Å–ª–∏ –ø—Ä–æ–ø–∞–¥–∞–µ—Ç –º–µ–Ω—é –≤—ã–±–æ—Ä–∞ –∫–Ω–æ–ø–æ–∫, –Ω–∞–∂–º–∏—Ç–µ –Ω–∞ —Å–∏–º–≤–æ–ª 4 —Ç–æ—á–µ–∫ '
        '–≤ –Ω–∏–∂–Ω–µ–º –ø—Ä–∞–≤–æ–º —É–≥–ª—É.‚¨áÔ∏è\n'
        '–ï—Å–ª–∏ –≤–æ–∑–Ω–∏–∫–Ω—É—Ç –≤–æ–ø—Ä–æ—Å—ã –ø–∏—à–∏—Ç–µ –º–Ω–µ –≤ —Ç–µ–ª–µ–≥—Ä–∞–º: @pashkavrn\n'
        '–•–æ—Ä–æ—à–µ–≥–æ –≤—Ä–µ–º–µ–Ω–∏ —Å—É—Ç–æ–∫, –Ω–∞–¥–µ—é—Å—å –≤—ã –ø–æ–ª—É—á–∏—Ç–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –∫–æ—Ç–æ—Ä—É—é '
        '–∏—Å–∫–∞–ª–∏ –∏ –º—ã —Å–º–æ–∂–µ–º –ø—Ä–æ–¥–æ–ª–∂–∏—Ç—å –∑–Ω–∞–∫–æ–º—Å—Ç–≤–æ –¥–∞–ª—å—à–µ ü•≥ü•≥ü•≥ü•≥ü•≥ü•≥ü•≥',
        reply_markup=keyboard)


@bot.message_handler(func=lambda message: message.text.lower() == '—Ä–µ–∑—é–º–µ')
def send_cv(message):
    """–ú–µ—Ç–æ–¥ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Ä–µ–∑—é–º–µ. """

    logging.info('–ó–∞–ø—Ä–æ—Å –Ω–∞ –æ—Ç–ø—Ä–∞–≤–∫—É —Ä–µ–∑—é–º–µ.')
    post_text = (
        '–ú–æ–µ —Ä–µ–∑—é–º–µ –Ω–∞ –¥–∞–Ω–Ω—ã–π –º–æ–º–µ–Ω—Ç. '
        '–°–ø–µ—Ü–∏–∞–ª—å–Ω–æ—Å—Ç—å - Python —Ä–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫, –Ω–æ —è —Ç–∞–∫ –∂–µ –≤–ª–∞–¥–µ—é SQL, '
        '–Ω–µ–º–Ω–æ–≥–æ —É–º–µ—é –≤ DevOps –∏ –¥—Ä—É–≥—É—é –≤—Å—è–∫—É—é –≤—Å—è—á–∏–Ω—É üòÖ, '
        '–Ω—É –≤—ã –ø—Ä–æ—á–∏—Ç–∞–µ—Ç–µ —Ç–∞–º ü§≠'
    )
    cv = open('cv/–®–µ–≤–µ–ª—å –ü–∞–≤–µ–ª –≠–¥—É–∞—Ä–¥–æ–≤–∏—á.pdf', 'rb')
    bot.send_document(message.chat.id, cv, caption=post_text)
    logging.info('–†–µ–∑—é–º–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ.')


if __name__ == "__main__":
    """–¢–æ—á–∫–∞ –≤—Ö–æ–¥–∞. """

    # –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –ª–æ–≥–∏—Ä–æ–≤–∞–Ω–∏—è.
    logging.basicConfig(filename='logs.log', level=logging.INFO,
                        format='%(asctime)s %(levelname)s %(message)s',
                        encoding='utf-8-sig')
    # –ó–∞–ø—É—Å–∫ –±–æ—Ç–∞.
    bot.infinity_polling()
